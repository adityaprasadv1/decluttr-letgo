<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myshoppingstore">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/decluttrlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyShoppingStore">
        <activity android:name=".Login"></activity>
        <activity android:name=".CreateAd" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".Home" />
        <activity android:name=".Products" />
        <activity android:name=".Details" />
        <activity android:name=".Checkout" android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".Confirmation" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>